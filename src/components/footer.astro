---
import Image from "astro/components/Image.astro";
import logo from "@/assets/logo-blue.svg";
import envelopeIcon from "@/assets/icons/envelope.svg";
import phoneIcon from "@/assets/icons/phone.svg";
import markerIcon from "@/assets/icons/marker.svg";
---

<footer class="bg-white py-16">
  <div class="container mx-auto px-4">
    <!-- First Part of Footer -->
    <div class="mb-8 rounded-md border border-gray-300 bg-white p-8">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
        <!-- Left Content Area -->
        <div class="space-y-6">
          <!-- Logo -->
          <Image src={logo} alt="logo" />

          <!-- Description Text -->
          <p class="leading-relaxed text-gray-700">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
            eiusmod tempor incididunt ut labore et dolore magna aliqua
            exercitation.
          </p>
        </div>

        <!-- Right Content Area -->
        <div class="space-y-6">
          <!-- Heading -->
          <h3 class="text-primary text-xl font-bold uppercase">GET IN TOUCH</h3>

          <!-- Separator Line -->
          <div class="border-t border-gray-300"></div>

          <!-- Contact Details -->
          <div class="space-y-4">
            <!-- Email -->
            <div class="flex items-center space-x-3">
              <div class="flex h-6 w-6 items-center justify-center">
                <Image
                  src={envelopeIcon}
                  alt="Email"
                  class="h-full w-full object-contain"
                />
              </div>
              <span class="text-gray-700">office@seniorlead.com</span>
            </div>

            <!-- Phone -->
            <div class="flex items-center space-x-3">
              <div class="flex h-6 w-6 items-center justify-center">
                <Image
                  src={phoneIcon}
                  alt="Phone"
                  class="h-full w-full object-contain"
                />
              </div>
              <span class="text-gray-700">+584/248-258</span>
            </div>

            <!-- Location -->
            <div class="flex items-center space-x-3">
              <div class="flex h-6 w-6 items-center justify-center">
                <Image
                  src={markerIcon}
                  alt="Location"
                  class="h-full w-full object-contain"
                />
              </div>
              <span class="text-gray-700">441 Leo Street, Denver, Colorado</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Second Part of Footer -->
    <div class="rounded-md border border-gray-300 bg-[#FAFAFA] p-6">
      <div
        class="flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0"
      >
        <!-- Left Content Area -->
        <div class="text-center md:text-left">
          <p class="text-primary text-sm">
            Copyright Â© 2025 SeniorLead. All rights reserved.
          </p>
        </div>

        <!-- Right Content Area -->
        <div class="flex space-x-6">
          <a
            href="#"
            class="hover:text-primary text-gray-700 transition-colors duration-300"
          >
            Legal
          </a>
          <a
            href="#"
            class="hover:text-primary text-gray-700 transition-colors duration-300"
          >
            Privacy Policy
          </a>
          <a
            href="#"
            class="hover:text-primary text-gray-700 transition-colors duration-300"
          >
            Terms of Use
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
