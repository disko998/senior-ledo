---
import Image from 'astro/components/Image.astro';
import consultationImage from '../../../public/images/home/why-us/old-people-having-lounch.jpg';
---

<section class='section bg-white'>
    <div class='container mx-auto px-4'>
        <!-- Consultation Section -->
        <div
            class='grid grid-cols-1 items-center gap-10 sm:gap-14 lg:grid-cols-2'
        >
            <!-- Left Side - Image -->
            <div class='order-2 lg:order-1'>
                <Image
                    src={consultationImage}
                    alt='Elderly people having lunch together in a care facility'
                    class='h-auto w-full rounded-lg object-cover'
                    loading='lazy'
                />
            </div>

            <!-- Right Side - Text Content -->
            <div class='order-1 lg:order-2'>
                <h2
                    class='text-primary text-2xl font-bold uppercase lg:text-3xl'
                >
                    LET'S DISCUSS HOW WE CAN HELP YOU GET STARTED.
                </h2>

                <p
                    class='mt-4 mb-6 leading-relaxed sm:mt-6 sm:mb-8 sm:text-base! md:text-xl! xl:text-2xl!'
                >
                    Schedule a free consultation to see how we can specifically
                    help your facility.
                </p>

                <button
                    class='open-contact-modal-btn bg-primary hover:bg-primary/90 rounded-lg px-6 py-3 font-bold text-white uppercase transition-colors lg:px-8 lg:py-4 lg:text-lg'
                >
                    SCHEDULE FREE CONSULTATION
                </button>
            </div>
        </div>
    </div>
</section>

<script>
    // Open modal when button is clicked
    document.addEventListener('DOMContentLoaded', () => {
        const consultationBtn = document.querySelector(
            '.open-contact-modal-btn',
        );

        consultationBtn?.addEventListener('click', () => {
            document.dispatchEvent(new CustomEvent('openContactModal'));
        });
    });
</script>
